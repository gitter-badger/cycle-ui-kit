{
  "name": "cycle-ui-kit",
  "version": "0.0.1",
  "description": "A set of components for use in Cycle.js apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyclejs-community/cycle-ui-kit.git"
  },
  "keywords": [
    "cyclejs",
    "frp",
    "reactive-programming",
    "ui",
    "material-design",
    "flat-ui",
    "design",
    "components"
  ],
  "author": "CycleJS Community",
  "license": "MIT",
  "contributors": [
    "Eshan Singh",
    "Sudarsan Balaji"
  ],
  "bugs": {
    "url": "https://github.com/cyclejs-community/cycle-ui-kit/issues"
  },
  "homepage": "https://github.com/cyclejs-community/cycle-ui-kit",
  "devDependencies": {
    "cz-conventional-changelog": "^1.1.6",
    "typescript": "^1.8.10",
    "typings": "^1.3.1",
    "xo": "^0.16.0"
  },
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "esnext": true,
    "space": 4,
    "semicolon": true,
    "envs": [
      "node",
      "browser",
      "es6",
      "shared-node-browser"
    ],
    "rules": {
      "consistent-this": [
        "warn",
        "self"
      ],
      "dot-location": [
        "warn",
        "property"
      ],
      "dot-notation": "error",
      "brace-style": ["error", "1tbs"],
      "curly": "error",
      "lines-around-comment": [
        "error",
        {
          "beforeBlockComment": false,
          "afterBlockComment": true,
          "beforeLineComment": true,
          "afterLineComment": false,
          "allowObjectStart": false,
          "allowObjectEnd": false,
          "allowArrayStart": false,
          "allowArrayEnd": false
        }
      ],
      "no-confusing-arrow": "warn",
      "no-fallthrough": "error",
      "no-new-symbol": "error",
      "arrow-spacing": "warn",
      "block-scoped-var": "warn",
      "func-style": [
        "warn",
        "expression"
      ],
      "generator-star": [
        "warn",
        "middle"
      ],
      "no-case-declarations": "off",
      "comma-style": [
        "error",
        "last"
      ],
      "comma-dangle": [
        "error",
        "always"
      ],
      "default-case": "warn",
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "complexity": "off",
      "no-constant-condition": "error",
      "no-debugger": "warn",
      "no-delete-var": "error",
      "no-duplicate-case": "error",
      "no-empty": "error",
      "no-floating-decimal": "error"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
